<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".EditUserActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtV1_editUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Modificar datos usuario"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/switch1_editUser"
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:textAlignment="textStart" />

                <EditText
                    android:id="@+id/alias_editUser"
                    android:layout_width="298dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="32dp"
                    android:background="#90ffffff"
                    android:drawableLeft="@drawable/user_black"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Nombre"
                    android:inputType="textPersonName"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView1_register" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/switch3_editUser"
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:textAlignment="textStart" />

                <EditText
                    android:id="@+id/edad_editUser"
                    android:layout_width="298dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="32dp"
                    android:background="#90ffffff"
                    android:drawableLeft="@drawable/cake_black"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Edad"
                    android:inputType="number"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inputRepeatPassword_register" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/switch4_editUser"
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:textAlignment="textStart" />

                <EditText
                    android:id="@+id/altura_editUser"
                    android:layout_width="298dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="32dp"
                    android:background="#90ffffff"
                    android:drawableLeft="@drawable/height_black"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Altura (En metros, 0.00)"
                    android:inputType="numberDecimal"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inputEdad_register" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/switch5_editUser"
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:textAlignment="textStart" />

                <EditText
                    android:id="@+id/peso_editUser"
                    android:layout_width="298dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="32dp"
                    android:background="#90ffffff"
                    android:drawableLeft="@drawable/weight_black"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Peso (En kg, 00.00)"
                    android:inputType="numberDecimal"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inputAltura_register" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSexo_editUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="48dp"
                    android:layout_marginBottom="12dp"
                    android:text="Sexo"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/spinnerActivityLevel_register"
                    app:layout_constraintEnd_toStartOf="@+id/spinnerSexo_register"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inputPeso_register" />

                <Spinner
                    android:id="@+id/spinnerSexo_editUser"
                    android:layout_width="263dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="32dp"
                    android:contentDescription="@string/app_name"
                    android:prompt="@string/seleccion_spinner"
                    android:spinnerMode="dropdown"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView2_register"
                    app:layout_constraintTop_toBottomOf="@+id/inputPeso_register" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtActivdad_editUser"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="12dp"
                    android:text="Actividad"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/textViewAlert_register"
                    app:layout_constraintEnd_toStartOf="@+id/spinnerActivityLevel_register"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinnerSexo_register" />

                <Spinner
                    android:id="@+id/spinnerActividad_editUser"
                    android:layout_width="260dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="32dp"
                    android:contentDescription="@string/app_name"
                    android:prompt="@string/seleccion_spinner"
                    android:spinnerMode="dropdown"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView3_register"
                    app:layout_constraintTop_toBottomOf="@+id/spinnerSexo_register" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSend_editUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="64dp"
                android:background="@drawable/button_style1"
                android:text="Confirmar cambios"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewAlert_register" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtV2_editUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Modificar Contraseña"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="28sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/switch2_editUser"
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:textAlignment="textStart" />

                <EditText
                    android:id="@+id/oldPassword_editUser"
                    android:layout_width="298dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="32dp"
                    android:background="#90ffffff"
                    android:drawableLeft="@drawable/key_black"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Contraseña actual"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inputEmail_register" />

            </LinearLayout>

            <EditText
                android:id="@+id/newPassword_editUSer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="32dp"
                android:background="#90ffffff"
                android:drawableLeft="@drawable/key_off_black"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Contraseña Nueva (min 6 digitos)"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputPassword_register" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnChangePass_editUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="64dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style1"
                    android:text="Cambiar Contraseña"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewAlert_register" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>